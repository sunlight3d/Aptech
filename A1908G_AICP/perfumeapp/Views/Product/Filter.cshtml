@{
}
    <!-- Main Content -->
    <main class="container my-5">
        <div class="row">
            <!-- Product Filters -->
            <div class="col-md-3">
                <h5 class="mb-3">Filter By</h5>
                <form>
                    <div class="mb-3">
                        <label for="inputName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="inputName" placeholder="Enter name">
                    </div>
                    <div class="mb-3">
                        <label for="inputBrand" class="form-label">Brand</label>
                        <input type="text" class="form-control" id="inputBrand" placeholder="Enter brand">
                    </div>
                    <div class="mb-3">
                        <label for="inputScent" class="form-label">Scent</label>
                        <input type="text" class="form-control" id="inputScent" placeholder="Enter scent">
                    </div>
                    <div class="mb-3">
                        <label for="inputPriceRange" class="form-label">Price Range</label>
                        <input type="text" class="form-control" id="inputPriceRange" placeholder="Enter price range">
                    </div>
                    <div class="mb-3">
                        <label for="inputOtherCriteria" class="form-label">Other Criteria</label>
                        <input type="text" class="form-control" id="inputOtherCriteria" placeholder="Enter other criteria">
                    </div>
                    <button type="submit" class="btn btn-primary">Apply Filters</button>
                </form>
            </div>

            <!-- Product Catalog -->
            <div class="col-md-9">
                <h5 class="mb-3">Search Results</h5>
                <div class="row">
                    <!-- Product Card -->
                    <div class="col-md-4 mb-3">
                        <div class="card h-100">
                            <img src="https://via.placeholder.com/300x300.png?text=Product+Image" class="card-img-top"
                                alt="Product Image">
                            <div class="card-body">
                                <h5 class="card-title">Product Name</h5>
                                <p class="card-text">Product Description</p>
                            <h6 class="card-subtitle mb-2 text-muted">$XX.XX</h6>
                            <a href="#" class="btn btn-primary">Add to Cart</a>
                            </div>
                        </div>
                    </div>
                    <!-- End Product Card -->

                    <!-- Add more Product Cards as needed -->
                </div>
            </div>
        </div>
    </main>

