<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.533"
        android:elevation="10dp">
        <ImageView
            android:id="@+id/imageViewProduct"
            android:layout_width="90dp"
            android:layout_height="90dp"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/txtProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="iphone 12"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewProduct"
        app:layout_constraintTop_toTopOf="@+id/imageViewProduct" />

    <TextView
        android:id="@+id/txtProductDescription"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:minLines="1"
        android:maxLines="2"
        android:text="This is a very good product I have ever seen. I buy this yesterday"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/txtProductName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/txtProductName"
        app:layout_constraintTop_toBottomOf="@id/txtProductName" />
    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:minLines="1"
        android:text="812 $"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/txtProductName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/txtProductDescription"
        app:layout_constraintTop_toBottomOf="@id/txtProductDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>